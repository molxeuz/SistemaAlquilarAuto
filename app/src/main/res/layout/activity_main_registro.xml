<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity_registro"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="30dp"
        android:layout_marginEnd="40dp"
        android:textAlignment="center"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:textSize="20dp"
        android:text="REGISTRO DE USUARIO"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="40dp"
        android:layout_marginEnd="40dp"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textAlignment="center"
        android:text="USUARIO"/>
    <EditText
        android:id="@+id/etusuario_registro"
        android:layout_width="500px"
        android:layout_height="100px"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_marginStart="110dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="40dp"
        android:textColor="@color/black"
        android:hint="Ingresa el usuario"
        android:backgroundTint="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textAlignment="center"
        android:text="NOMBRE"/>
    <EditText
        android:id="@+id/etnombre_registro"
        android:layout_width="500px"
        android:layout_height="100px"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_marginStart="110dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="40dp"
        android:textColor="@color/black"
        android:hint="Ingresa el nombre"
        android:backgroundTint="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textAlignment="center"
        android:text="ROL"/>
    <TextView
        android:layout_width="160px"
        android:layout_height="50px"
        android:layout_marginStart="120dp"
        android:layout_marginTop="25dp"
        android:textColor="#000000"
        android:textSize="15dp"
        android:textAlignment="center"
        android:text="USUARIO"/>
    <Switch
        android:id="@+id/swrol_registro"
        android:layout_width="130px"
        android:layout_height="50px"
        android:layout_marginStart="190dp"
        android:layout_marginTop="-23dp"
        android:layout_marginEnd="40dp">
    </Switch>
    <TextView
        android:layout_width="310px"
        android:layout_height="50px"
        android:layout_marginStart="250dp"
        android:layout_marginTop="-23dp"
        android:layout_marginEnd="40dp"
        android:text="ADMINISTRADOR"
        android:textAlignment="center"
        android:textColor="#000000"
        android:textSize="15dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="40dp"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        android:textColorLink="@color/black"
        android:text="CONTRASEÑA"/>
    <EditText
        android:id="@+id/etcontraseña_registro"
        android:layout_width="500px"
        android:layout_height="100px"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:layout_marginStart="110dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="40dp"
        android:textColor="@color/black"
        android:hint="Ingresa la contraseña"
        android:backgroundTint="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="40dp"
        android:textColor="#FF0000"
        android:textStyle="bold"
        android:textSize="15dp"
        android:textAlignment="center"
        android:textColorHint="@color/black"
        android:textColorLink="@color/black"
        android:text="PALABRA RESERVA"/>
    <EditText
        android:id="@+id/etpalabra_registro"
        android:layout_width="500px"
        android:layout_height="100px"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_marginStart="110dp"
        android:layout_marginTop="5dp"
        android:layout_marginEnd="40dp"
        android:textColor="@color/black"
        android:hint="Ingresa la palabra"
        android:backgroundTint="@color/black"
        android:textColorHint="@color/black"
        android:textSize="15dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="40dp">
        <Button
            android:id="@+id/btnregresar_registro"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="REGRESAR"
            android:layout_margin="5dp"
            android:textSize="10dp"
            android:backgroundTint="#FF0000"/>
        <Button
            android:id="@+id/btnregistrar_registro"
            android:layout_width="120dp"
            android:layout_height="40dp"
            android:text="REGISTRAR"
            android:layout_margin="5dp"
            android:textSize="10dp"
            android:backgroundTint="#FF0000"/>
    </LinearLayout>

</LinearLayout>